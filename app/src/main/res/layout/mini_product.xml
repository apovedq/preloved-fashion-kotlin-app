<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="140dp"
    android:layout_height="240dp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="255dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardIV"
            android:layout_width="140dp"
            android:layout_height="157dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.279">

            <ImageView
                android:id="@+id/miniPostImage"
                android:layout_width="140dp"
                android:layout_height="157dp"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <ImageView
                android:id="@+id/favoriteView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="105dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/unfilled_heart" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/miniPostTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/bold"
            android:text="TextView"
            android:textColor="#262626"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/miniPostPoints"
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            android:background="@drawable/fashion_points_background"
            android:fontFamily="@font/bold"
            android:padding="2dp"
            android:text="  0 FP"
            android:textColor="#EFEFEF"
            android:textSize="15sp" />
    </LinearLayout>

</FrameLayout>
